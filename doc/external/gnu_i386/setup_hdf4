#!/bin/ksh
export CFLAGS='-O2'
export FC='xlf'
export F90='xlf'
export FFLAGS='-O2'
export F90FLAGS='-O2'
export M4=/usr/local/bin/m4
export ZLIB=~wrfhelp/external/zlib/zlib-1.2.3/g95_i686
export JPEG=~wrfhelp/external/jpeg/jpeg-6b/g95_i686
./configure --enable-fortran --with-zlib=$ZLIB --with-jpeg=$JPEG --prefix=$PWD
make all
make install
ranlib lib/*.a

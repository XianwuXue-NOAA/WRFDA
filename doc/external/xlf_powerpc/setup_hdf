#!/bin/ksh
export CFLAGS='-O2'
export FC='xlf'
export F90='xlf'
export FFLAGS='-O2'
export F90FLAGS='-O2'
make clean
./configure --enable-fortran
make all
make install
rm src/*.o

if test -e hdf5; then
   ln -s hdf5/lib .
   ln -s hdf5/include .
fi

if test -e NewHDF; then
   ln -s NewHDF/lib .
   ln -s NewHDF/include .
fi

ranlib lib/*.a

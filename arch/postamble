#
#	Macros, these should be generic for all machines

LN		=	ln -sf
MAKE	=	make -i -r
RM		= 	rm -f
MV  	=   mv

#	There is probably no reason to modify these rules

.F.o:
	$(RM) $@
	$(SED_FTN) $*.F > $*.b 
	$(CPP) -I../inc $(CPPFLAGS) $*.b  > tmp.f
	$(FC) -c $(FCFLAGS) $(MODULE_DIRS) $(PROMOTION) tmp.f
	$(MV) tmp.o $*.o
	$(RM) $*.b tmp.f

.f.o:
	$(RM) $@
	$(FC) -c $(FCFLAGS) $(PROMOTION) $*.f

.c.o:
	$(RM) $@
	$(CC) -c $(CFLAGS) $*.c



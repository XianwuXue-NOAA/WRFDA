#
# Makefile for RTTOV-8.7 main programs
#
# Usage:  make PROG=example FC=F90 FFLAGS='-Am -O3 -M .'
#
# R Saunders 27 june 2005


LIBRARY=librttov8.7.a

$(PROG).out: $(PROG).o $(LIBRARY) 
	     $(FC) $(FFLAGS) $(PROG).o -L. -lrttov8.7 -o $@

clean:
	rm -f *.out 

.SUFFIXES: .F90 .f

.F90.o : 
	$(FC) -c $(FFLAGS) $*.F90 -o $*.o

# Dependencies with modules and interfaces

example_fwd.o: example_fwd.F90 rttov_const.o rttov_types.o parkind1.o rttov_errorhandling.o rttov_readcoeffs.o rttov_initcoeffs.o rttov_errorreport.o rttov_setupchan.o rttov_setupindex.o rttov_direct.o rttov_dealloc_coef.o
rttov_ascii2bin_coef.o: rttov_ascii2bin_coef.F90 rttov_types.o parkind1.o rttov_coeffname.o rttov_opencoeff.o rttov_readcoeffs.o rttov_initcoeffs.o rttov_writecoef.o
rttovcld_test.o: rttovcld_test.F90 rttov_const.o rttov_types.o parkind1.o rttov_errorhandling.o rttov_readcoeffs.o rttov_initcoeffs.o rttov_intex.o rttov_cld.o rttov_cld_tl.o rttov_cld_ad.o rttov_cld_k.o
rttovcld_testad.o: rttovcld_testad.F90 rttov_const.o rttov_types.o parkind1.o rttov_errorhandling.o rttov_readcoeffs.o rttov_initcoeffs.o rttov_intex.o
rttovscatt_test.o: rttovscatt_test.F90 rttov_const.o rttov_types.o parkind1.o rttov_errorhandling.o rttov_readcoeffs.o rttov_initcoeffs.o rttov_readscattcoeffs.o rttov_intex.o rttov_scatt.o rttov_scatt_tl.o rttov_scatt_ad.o rttov_scatt_k.o
test_2_coef.o: test_2_coef.F90 rttov_const.o rttov_types.o parkind1.o rttov_coeffname.o rttov_opencoeff.o rttov_errorreport.o rttov_readcoeffs.o rttov_initcoeffs.o
test_coef.o: test_coef.F90 rttov_types.o parkind1.o rttov_coeffname.o rttov_opencoeff.o rttov_readcoeffs.o rttov_initcoeffs.o rttov_writecoef.o
test_errorhandling.o: test_errorhandling.F90 rttov_const.o parkind1.o rttov_errorhandling.o rttov_errorreport.o
test_q2v.o: test_q2v.F90 rttov_const.o parkind1.o rttov_q2v.o rttov_v2q.o
tstrad.o: tstrad.F90 rttov_const.o rttov_types.o parkind1.o rttov_errorhandling.o rttov_errorreport.o rttov_setup.o rttov_setupchan.o rttov_setupindex.o rttov_direct.o tstrad_tl.o tstrad_ad.o tstrad_k.o rttov_dealloc_coef.o
tstrad_rttov7.o: tstrad_rttov7.F90 parkind1.o mod_cparam.o rttvi.o rttov.o
tstrad_sx6.o: tstrad_sx6.F90 rttov_const.o rttov_types.o mod_tstrad.o parkind1.o rttov_errorhandling.o rttov_errorreport.o rttov_setup.o rttov_setupchan.o rttov_setupindex.o rttov_direct.o tstrad_tl.o tstrad_ad.o tstrad_k.o rttov_dealloc_coef.o
